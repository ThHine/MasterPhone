            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/inter"
            android:text="Ophone"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

